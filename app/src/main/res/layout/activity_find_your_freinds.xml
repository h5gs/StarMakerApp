<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.archirayan.starmakerapp.activity.FindYourFreindsActivity">

    <LinearLayout
        android:id="@+id/linear_title_Dsignin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:background="@drawable/file_title_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/txt_title_Dsignin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_weight="1"
            android:text="Find Yours Friends"
            android:textColor="@color/white"
            android:textSize="@dimen/_17sdp" />

        <TextView
            android:id="@+id/txt_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:text="Next"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/_17sdp" />
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="@dimen/_10sdp"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <!--<TextView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginLeft="@dimen/_10sdp"-->
            <!--android:text="Freinds on Star Creator "-->
            <!--android:textSize="@dimen/_13sdp" />-->

            <!--<android.support.v7.widget.RecyclerView-->
            <!--android:id="@+id/item_findfreinds_starcreator_list"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="@dimen/_200sdp"-->
            <!--android:layout_above="@+id/main_bottom"-->
            <!--android:layout_below="@+id/main_header" />-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="People You Should Invite"
                android:textSize="@dimen/_13sdp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/item_findyourfreinds_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
